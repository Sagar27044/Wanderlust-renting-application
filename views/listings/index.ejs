<% layout("/layouts/boilerplate") %>
<body>
    <h1>All Listings</h1>
    <!--<form method="GET"action="/listings/new">
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
        <%   for(let listings of allListings){ %>
            <a href="/listings/<%=listings.id%>"class="listing-link">
            <div class="card col">
                <img src="<%=listings.image%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <h5 class="card-title"><%=listings.title%></h5>
                  <p class="card-text">
                    <%= listings.title %>
                    <br/>
                    &#8377;<%= listings.price.toLocaleString("en-IN") %> /night
                </p>
                </div>
              </div>
              <%}%>
        </a>

    </div>
    
    
</body>


